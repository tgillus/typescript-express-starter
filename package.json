{
  "name": "typescript-express-starter",
  "version": "1.0.0",
  "description": "A Typescript Express starter project.",
  "main": "build/server.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "bundle:dev": "webpack --config webpack.config.development.js",
    "bundle:prod": "webpack --config webpack.config.production.js",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.ts",
    "lint-and-fix": "eslint . --ext .js,.ts --fix",
    "prepare": "husky install",
    "start": "npm run build && node build/server.js",
    "start:dev": "nodemon",
    "start:webpack": "npm run bundle:dev && NODE_OPTIONS=--enable-source-maps node bundle/server.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "watch": "tsc -c",
    "watch:webpack": "webpack --watch --config webpack.config.development.js"
  },
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "https://github.com/tgillus/typescript-express-starter.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.3.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  }
}
